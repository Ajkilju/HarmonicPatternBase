@model HarmonicPatternsBase.Models.HarmonicPatternViewModels.HarmonicPatternCreateViewModel

@{
    ViewData["Title"] = "Create";
    var ratingList = new SelectList(new List<int> { 1, 2, 3, 4, 5 });
}

<h2>Create</h2>

<form asp-action="Create">
    <div class="form-horizontal">
        <h4>HarmonicPattern</h4>
        <hr />
        <div asp-validation-summary="ModelOnly" class="text-danger"></div>

        <div class="form-group">
            <label asp-for="Day" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Day" class="form-control" />
                <span asp-validation-for="Day" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Month" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Month" class="form-control" />
                <span asp-validation-for="Month" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Year" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Year" class="form-control" />
                <span asp-validation-for="Year" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Hour" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Hour" class="form-control" />
                <span asp-validation-for="Hour" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Minute" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Minute" class="form-control" />
                <span asp-validation-for="Minute" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="ReactionRating" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="ReactionRating" class="form-control" asp-items="ratingList"></select>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="PrecisionRating" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="PrecisionRating" class="form-control" asp-items="ratingList"></select>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Discription" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Discription" class="form-control" />
                <span asp-validation-for="Discription" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="Instrument" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <input asp-for="Instrument" class="form-control" />
                <span asp-validation-for="Instrument" class="text-danger" />
            </div>
        </div>

        <div class="form-group">
            <label asp-for="IntervalId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="IntervalId" class ="form-control" asp-items="ViewBag.IntervalId"></select>
            </div>
        </div>

        <div class="form-group">
            <label asp-for="PatternTypeId" class="col-md-2 control-label"></label>
            <div class="col-md-10">
                <select asp-for="PatternTypeId" class ="form-control" asp-items="ViewBag.PatternTypeId"></select>
            </div>
        </div>

        <div class="form-group">
            <div class="col-md-offset-2 col-md-10">
                <input type="submit" value="Create" class="btn btn-default" />
            </div>
        </div>
    </div>
