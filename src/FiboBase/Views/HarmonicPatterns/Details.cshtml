@{ 
    var imageContent = "~/images/patterns/uklad1.png";

    if (Model.HarmonicPattern.Image.Length > 5)
    {
        var base64 = Convert.ToBase64String(Model.HarmonicPattern.Image);
        imageContent = String.Format("data:image/gif;base64,{0}", base64);
    }
}



<div class="container">

    <div class="col-md-7 col-md-offset-1" style="padding:0px">

        <div class="content">

            <div style="margin-bottom:10px;">
                <a asp-action="Edit" class="btn button-purple">@Model.HarmonicPattern.Instrument.Name</a>
                <a asp-action="Edit" class="btn button-green">@Model.HarmonicPattern.Interval.Value</a>
                <a asp-controller="Patterns" asp-action="Details" asp-route-id="@Model.HarmonicPattern.PatternType.Id" class="btn button-blue">@Model.HarmonicPattern.PatternType.Name</a>
                <span class="text" style="margin-top:10px; font-size:12px;">
                    <span style="margin-left:20px">NA RYNKU:</span>
                    <span class="glyphicon glyphicon-calendar" aria-hidden="true" style="margin-left:5px"></span>
                    @Html.DisplayFor(modelItem => Model.HarmonicPattern.Date)
                    <span class="glyphicon glyphicon-time" aria-hidden="true"></span>
                    @Model.HarmonicPattern.Date.TimeOfDay

                    <span style="margin-left:30px">DODANO:</span>
                    <span class="glyphicon glyphicon-calendar" aria-hidden="true" style="margin-left:5px"></span>
                    @Html.DisplayFor(modelItem => Model.HarmonicPattern.AddDate)

                </span>
            </div>


            <div style="text-align:center; margin-bottom:10px;">
                <img src='@imageContent' class="img-rounded" style="max-width:550px;" asp-append-version="true" />
            </div>

            @if (Model.HarmonicPattern.Discription != null)
            {
                <div class="text" style="margin-bottom:10px;">
                    @Model.HarmonicPattern.Discription
                </div>
            }

        </div>

        <div class="content">

            <div style="margin-bottom:10px;">
                @if (Model.HarmonicPattern.User == null)
                {
                    <img src='~/images/DefaultUserPhoto.png' class="img-circle" style="height:65px; width:65px; display:inline-block;" />
                }
                else
                {

                }

                @if (Model.HarmonicPattern.User == null)
                {
                    <a asp-action="Edit" class="text text-blue" style="margin-left:10px; display:inline-block; font-size:12px;">NIEZNANY UZYTKOWNIK</a>
                }
                else
                {

                }


            </div>

        </div>

    </div>

        <div class="col-md-3" style="padding:0px">

            <div class="content">

                <div class="row text" style="font-size:15px; margin-bottom:5px;">
                    <div class="col-md-10">
                        SREDNIA OCENA REAKCJ:
                    </div>
                    <span style="color:#920063; font-size:18px;"> <strong> @Model.HarmonicPattern.AvarageReactionRating </strong> </span>
                </div>
                <div class="row text" style="font-size:12px; margin-bottom:5px;">
                    <div class="col-md-10">
                        LICZBA OCEN:
                    </div>
                    <span style="color:#920063"> @Model.HarmonicPattern.NumgerOfReactionRatings </span>
                </div>
                <div class="row text" style="font-size:12px; margin-bottom:30px;">
                    <div class="col-md-10">
                        <div class="dropdown">
                            <button class="btn button-blueframe dropdown-toggle" style="background-color:#fff; font-size:12px;" type="button" id="dropdownMenu"
