@model HarmonicPatternsBase.Models.HarmonicPatternViewModels.HarmonicPatternDetailsViewModel

@{
    ViewData["Title"] = "Details";
    var ratingList = new SelectList(new List<int> { 1, 2, 3, 4, 5 });
}

@{ 
    var imageContent = "~/images/patterns/uklad4.png";

    if (Model.HarmonicPattern.Image.Length > 5)
    {
        var base64 = Convert.ToBase64String(Model.HarmonicPattern.Image);
        imageContent = String.Format("data:image/gif;base64,{0}", base64);
    }
}

<div class="container">

    <div class="col-md-8 col-md-offset-2" style="padding:0px">

        <div class="content">

            <div style="margin-bottom:10px;">
                @if (Model.HarmonicPattern.User == null)
                {
                    <img src='~/images/DefaultUserPhoto.png' class="img-circle" style="height:65px; width:65px; display:inline-block;" />
                }
                else
                {

                }

                @if (Model.HarmonicPattern.User == null)
                {
                    <a asp-action="Edit" class="text text-blue" style="margin-left:10px; display:inline-block; font-size:12px;">NIEZNANY UZYTKOWNIK</a>
                }
                else
                {

                }


            </div>

        </div>

        <div class="content">

            <div>
                <a asp-action="Edit" class="btn button-purple button-md">@Model.HarmonicPattern.Instrument.Name</a>
                <a asp-action="Edit" class="btn button-green button-md">@Model.HarmonicPattern.Interval.Name</a>
                <a asp-controller="Patterns" asp-action="Details" asp-route-id="@Model.HarmonicPattern.PatternType.Id" class="btn button-blue button-md">@Model.HarmonicPattern.PatternType.Name</a>
                <a asp-action="Edit" class="btn button-pink button-md">@Model.HarmonicPattern.PatternDirect.Name</a>
            </div>

            <div style="text-align:center; margin-bottom:30px; margin-top:30px;">
                <img src='@imageContent' class="img-rounded" style="max-width:700px;" asp-append-version="true" />
            </div>

            @if (Model.HarmonicPattern.Discription != null)
            {
                <div class="text" style="margin:15px;">
                    @Model.HarmonicPattern.Discription
                </div>
            }

            <div class="row text" style="margin-bottom:5px;">

                <div class="col-md-5">
                    <div class="col-md-9">
                        REAKCJA PO 5 SWIECACH:
                    </div>
                    <div class="text-purple" style="font-size:15px; text-align:left">
                        <strong> @Model.HarmonicPattern.ReactionAfter5Candles.Name </strong>
                    </div>
                    <div class="col-md-9">
                        REAKCJA PO 10 SWIECACH:
                    </div>
                    <div class="text-purple" style="font-size:15px; text-align:left">
                        <strong> @Model.HarmonicPattern.ReactionAfter10Candles.Name </strong>
                    </div>
                    <div class="col-md-9">
                        REAKCJA PO 20 SWIECACH:
                    </div>
                    <div class="text-purple" style="font-size:15px; text-align:left">
                        <strong> @Model.HarmonicPattern.ReactionAfter20Candles.Name </strong>
                    </div>

                    <div style="height:20px"> </div>

                    @*
                    <div class="col-md-9">
                        LICZBA FAL:
                    </div>
                    <div class="text-blue" style="font-size:15px; text-align:left">
                        <strong> @Model.HarmonicPattern.NumberOfWaves </strong>
                    </div>
                    *@

                    <div class="col-md-9">
                        STOSUNEK AB DO XA:
                    </div>
                    <div class="text-blue" style="font-size:15px; text-align:left">
                        <strong> @Model.HarmonicPattern.ABtoXAratio </strong>
                    </div>
                    <div class="col-md-9">
                        STOSUNEK Ad DO XA:
                    </div>
                    <div class="text-blue" style="font-size:15px; text-align:left">
                        <strong> @Model.HarmonicPattern.ADtoXAratio </strong>
                    </div>
                    <div class="col-md-9">
                        STOSUNEK BC DO AB:
                    </div>
                    <div class="text-blue" style="font-size:15px; text-align:left">
                        <strong> @Model.HarmonicPattern.BCtoABratio </strong>
                    </div>
                    <div class="col-md-9">
                        STOSUNEK CD DO BC:
                    </div>
                    <div class="text-blue" style="font-size:15px; text-align:left">
                        <strong> @Model.HarmonicPattern.CDtoBCratio </strong>
                    </div>
                    <div class="col-md-9">
                        STOSUNEK CD DO AB:
                    </div>
                    <div class="text-blue" style="font-size:15px; text-align:left">
                        <strong> @Model.HarmonicPattern.CDtoABratio </strong>
                    </div>

                </div>



                <div class="col-md-7">
                    <div class="col-md-3">
                        DODANO:
                    </div>
                    <div>
                        <span class="glyphicon glyphicon-calendar" aria-hidden="true" style="margin-left:5px"></span>
                        @Html.DisplayFor(modelItem => Model.HarmonicPattern.AddDate)
                    </div>
                    <div class="col-md-3">
                        NA RYNKU:
                    </div>
                    <div>
                        <span class="glyphicon glyphicon-calendar" aria-hidden="true" style="margin-left:5px"></span>
                        @Html.DisplayFor(modelItem => Model.HarmonicPattern.Date)
                        <span style="margin-left:10px"  class="glyphicon glyphicon-time" aria-hidden="true"></span>
                        @Model.HarmonicPattern.Date.TimeOfDay
                    </div>
                </div>

            </div>
        





  



            </div>

        </div>

    </div>

   
