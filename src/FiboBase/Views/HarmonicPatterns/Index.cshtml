<div class="container">

    

    <div class="masonry">

        @foreach (var item in Model.HarmonicPatterns)
        {
            var imageContent = "~/images/DefaultPhoto1.png";

            <div class="item">

                @if (item.Image.Length > 5)
                {
                    var base64 = Convert.ToBase64String(item.Image);
                    imageContent = String.Format("data:image/gif;base64,{0}", base64);
                }

                <a asp-action="Details" asp-route-id="@item.Id">
                    <div style="text-align:center">
                        <img src='@imageContent' class="img-rounded" style="max-width:245px;" asp-append-version="true" />
                    </div>
                </a>

                <div style="margin-top:10px;">

                    <a asp-action="Edit" class="btn button-purple">@item.Instrument</a>
                    <a asp-action="Edit" class="btn button-green">@item.Interval.Value</a>
                    <a asp-action="Edit" class="btn button-blue">@item.PatternType.Name</a>

                </div>

                <div style="margin-top:10px;">
                    <a asp-action="Edit" asp-route-id="@item.Id">Edit</a>
                    <a asp-action="Delete" asp-route-id="@item.Id">Delete</a>
                </div>
            </div>
        }
    </div>
</div>
