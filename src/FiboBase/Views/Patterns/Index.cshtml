@model HarmonicPatternsBase.Models.PatternViewModels.PatternsIndexViewModel


<div style="background-color:#36424a; height:80px;">
   
</div>

<div style="padding:30px; background-color:#d6d9dc;">
    <div class="text container" style="font-size:15px;">
        <a asp-controller="Info" asp-action="Patterns" class="btn button-blueframe">Czym sa uklady harmoniczne</a>
    </div>
</div>

<div class="container" style="margin-top:30px">
    <div class="masonry">

        @foreach (var item in Model.Patterns)
        {

            <div class="item">

                <a asp-controller="Patterns" asp-action="Details" asp-route-id="@item.Id" class="btn button-blue button-md">@item.Name</a>
                <div style="text-align:center">
                    <a asp-action="Details" asp-route-id="@item.Id">
                        <img src="~/images/patterns/uklad1.png" class="img-rounded" style="max-width:230px;" asp-append-version="true" />
                    </a>

                    <div class="row" style="text-align:center">
                        <div class="col-md-6">
                            <p>
                                AD:XA
                            </p>
                            <p>
                                AB:XA
                            </p>
                        </div>
                        <div class="col-md-6 text-green" style="font-size:15px;">
                            <p>
                                <strong>@item.ADtoXAratio</strong>
                            </p>
                            <p>
                                <strong>@item.ABtoXAratio</strong>
                            </p>
                        </div>
                    </div>


                    <div style="margin-top:10px;">
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn button-blueframe" style="background-color:#ffffff;">Szczegoly</a>
                    </div>
                </div>
            </div>
        }
    </div>
</div>

