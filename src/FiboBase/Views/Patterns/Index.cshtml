@model HarmonicPatternsBase.Models.PatternViewModels.PatternsIndexViewModel


<div class="container" style="margin-top:30px">
    <div class="masonry2">

        @foreach (var item in Model.Patterns)
        {

            <div class="item">

                <a asp-action="Details" asp-route-id="@item.Id">
                    <div style="text-align:center">
                        <img src='@item.ImageString' class="img-rounded" style="max-width:330px;" asp-append-version="true" />
                    </div>
                </a>

                <div style="margin-top:10px;">
                   @item.Name
                </div>
            </div>
        }
    </div>
</div>
